{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run test",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/runner.go",
            "env": {
                "ENV": "development"
            }
        },
        {
            "name": "Version command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "ENV": "development"
            },
            "args": [
                "version"
            ]
        },
        {
            "name": "Test command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "ENV": "development"
            },
            "args": [
                "test"
            ]
        },
        {
            "name": "Test Suite command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "ENV": "development"
            },
            "args": [
                "test", "execute", "--suite", "examples/suite.yaml", "--credentials", "credentials.json"
            ]
        },
    ]
}