{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run test",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/runner.go",
            "env": {
                "ENV": "development"
            }
        },
        {
            "name": "Version command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "ENV": "development"
            },
            "args": [
                "version"
            ]
        },
        {
            "name": "Test command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "ENV": "development"
            },
            "args": [
                "test"
            ]
        },
        {
            "name": "Profile NLU test suite command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "ENV": "development"
            },
            "args": [
                "profile-nlu", "execute", "--suite", "examples/suite.yaml", "--credentials", "credentials.json"
            ]
        },
        {
            "name": "CICD pipeline command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "ENV": "development"
            },
            "args": [
                "cicd", "execute", "my-environment", "--project-id", "test", "--location-id", "test", "--agent-name", "test", "--credentials", "credentials.json"
            ]
        },
    ]
}